<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="@dimen/_64sdp"
        android:layout_height="@dimen/_64sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/type_car"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_details_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:fontFamily="@font/alma_reg"
        android:gravity="right"
        android:text="ابي اروح الهايبر وماعندي سياره حد يوديني"
        android:textSize="@dimen/_17ssp"
        app:layout_constraintLeft_toLeftOf="@+id/item_attendence_tv"
        app:layout_constraintRight_toLeftOf="@+id/item_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:drawableRight="@drawable/my_list_help_accepted_time"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/alma_light"
        android:text="منذ ساعه"
        app:layout_constraintRight_toLeftOf="@+id/item_img"
        app:layout_constraintTop_toBottomOf="@id/item_details_tv" />

    <TextView
        android:id="@+id/item_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:drawableRight="@drawable/my_list_help_accepted_info_attendance"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/alma_light"
        android:text="رجال"
        app:layout_constraintRight_toLeftOf="@+id/item_time_tv"
        app:layout_constraintTop_toBottomOf="@id/item_details_tv" />

    <TextView
        android:id="@+id/item_help_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:drawableRight="@drawable/my_list_help_accepted_info_help_type"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/alma_light"
        android:text="فزعة سيارة"
        app:layout_constraintRight_toLeftOf="@+id/item_info_tv"
        app:layout_constraintTop_toBottomOf="@id/item_details_tv" />

    <TextView
        android:id="@+id/item_attendence_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:drawableRight="@drawable/my_list_help_accepted_info_attendance"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/alma_light"
        android:text="2 فزعو"
        app:layout_constraintRight_toLeftOf="@+id/item_help_type_tv"
        app:layout_constraintTop_toBottomOf="@id/item_details_tv" />

    <Button
        android:id="@+id/item_cancel_btn"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/item_timeline_btn_background"
        android:text="الغاء"
        android:textColor="@color/colorAccent"
        app:layout_constraintRight_toRightOf="@+id/item_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_img" />

    <view
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_img"
        app:layout_constraintTop_toBottomOf="@id/item_cancel_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>